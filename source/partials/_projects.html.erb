<div class="container">
  <section id="projects">
    <h2 class="mb-4">My Projects</h2>
    <div class="d-inline-flex align-items-center mb-5 projects">
      <div class="mr-5">
        <%= link_to "Safe Spaces 🏡", "https://www.safespacesjp.com/", target: '_blank', class: "project-name" %>
