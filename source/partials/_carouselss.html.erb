<div id="carouselExampleControls" class="carousel slide device-content" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "safe-spaces1.PNG", alt: "first screenshot", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "safe-spaces2.PNG", alt: "second screenshot", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "safe-spaces3.PNG", alt: "third screenshot", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "safe-spaces4.PNG", alt: "fourth screenshot", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "safe-spaces5.PNG", alt: "fifth screenshot", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "safe-spaces6.PNG", alt: "sixth screenshot", class: "d-block w-100" %>
